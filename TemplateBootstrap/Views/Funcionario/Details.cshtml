@model TemplateBootstrap.Models.funcionarioModel

@{
    ViewBag.Title = "Details";
}

<h1>Detalhes do Funcionário</h1>
<div class="text-xs font-weight-bold text-primary
     text-uppercase mb-1">Detalhes do Funcionário</div>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Nome,
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Nome,
               new { htmlAttributes = new { @class = "form-control" } })               
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Endereco,
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Endereco,
               new { htmlAttributes = new { @class = "form-control" } })               
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Email,
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Email,
               new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <br/>
    <div class="row">
        <div class="col-md-12">           
            <a class="btn btn-light" href="~/Funcionario/Index">Voltar</a>
        </div>
    </div>
}


